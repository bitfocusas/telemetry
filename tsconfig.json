{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"strict": true,
		"incremental": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"noErrorTruncation": true,
		"jsx": "react",
		"baseUrl": ".",
		"typeRoots": ["./node_modules/@types", "./types"],
		"outDir": "./dist",
		"sourceMap": true,
		"inlineSources": true,
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts"],
}
